<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ripen.dao.mapper.BkRecordMapper">

    <!-- 书籍记录数据列 -->
    <sql id="RECORD_COL">
        ser_id, bk_id, lend_time, return_time, expire_time, update_time
    </sql>

    <!-- 批量新增书籍记录 -->
    <insert id="batchAddRecord" parameterType="BkRecord">
        INSERT INTO `bk_record`
            (<include refid="RECORD_COL" />)
        VALUES
            <foreach collection="recordList" item="item" separator=",">
                (#{serId}, #{bkId}, #{lendTime}, #{returnTime}, #{expireTime}, #{updateTime})
            </foreach>
    </insert>

    <!-- 获取书籍记录 -->
    <select id="getRecord" resultType="BkRecord">
        SELECT <include refid="RECORD_COL" />
        FROM `bk_record`
        WHERE 1=1
        <if test="bkId != null">
            AND bk_id = #{bkId}
        </if>
        <if test="serId != null">
            AND ser_id = #{serId}
        </if>
        ORDER BY lend_time DESC
    </select>

    <!-- 根据书籍编号更新书籍记录 -->
    <update id="updateRecord">
        UPDATE `bk_record`
        SET
            update_time = now()
            <if test="lendTime != null">
                , lendTime = #{lendTime}
            </if>
            <if test="returnTime != null">
                , return_time = #{returnTime}
            </if>
            <if test="expireTime != null">
                , expire_time = #{expireTime}
            </if>
        WHERE ser_id = #{serId}
    </update>

</mapper>